<% provide(:title, "Editar usuario") %>
<h1>Edit User</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :firstname, "Nombre" %>
      <%= f.text_field :firstname%>

      <%= f.label :lastname, "Apellidos" %>
      <%= f.text_field :lastname %>

      <%= f.label :code,"Código" %>
      <%= f.text_field :code %>

      <%= f.label :identificationtype, "Tipo de identificación" %>
      <%=f.select(:identificationtype,options_for_select([["CC", "CC"], ["CE", "CE"], ["TI", "TI"]]))%>       

      <%= f.label :identification, "Número de identificación" %>
      <%= f.text_field :identification %>

      <%= f.label :status, "Estado" %>
      <%=f.select(:status,options_for_select([["Activo", "Activo"], ["Inactivo", "Inactivo"]]))%>   

      <%= f.label :usertype,"Tipo de usuario" %>
      <%=f.select(:usertype,options_for_select([["Estudiante", "Estudiante"], ["Coordinador", "Coordinador"], ["Profesor", "Profesor"]]))%>   

      <%= f.label :email, "Correo" %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmación" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :programs, "Programas" %>
      <%= select_tag "programs", options_from_collection_for_select(Program.all, 'id', 'name',  {selected: @programs_ids,disabled: @programs_ids}), :multiple => true %>

      <%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
      <% end %>
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails">Cambiar</a>
    </div>
  </div>
