<% provide(:title, 'All subjects') %>
<h1>Materias</h1>
<p align="center"><%= link_to "Nueva Materia", new_subject_path, :class => 'btn btn-primary'  %></p> 

<%= will_paginate %>
<ul class="subjects">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Cuota</th>
      <th>Creditos</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id %></td>
          <td><%= subject.code %></td>
        <td><%= link_to subject.name, subject_path(subject) %></td>
          <td><%= subject.quota %></td>
          <td><%= subject.credits %></td>
        <td>
          
          <%= link_to I18n.t('materias.boton.estudiantes'), list_student_by_path(subject.id), :class => 'btn btn-mini' %>
           <%= link_to I18n.t('materias.boton.quota'), config_quota_by_path(subject.id), :class => 'btn btn-mini' %>
          <%= link_to 'Editar', edit_subject_path(subject), :class => 'btn btn-mini' %>
          <%= link_to 'Deshabilitar', disable_path(subject.id), :class => 'btn btn-mini' %>
          <%= link_to 'Borrar', subject_path(subject), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
          
  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</ul>
<%= will_paginate %>
<p align="center"><%= link_to "Nueva Materia", new_subject_path, :class => 'btn btn-primary'  %></p>