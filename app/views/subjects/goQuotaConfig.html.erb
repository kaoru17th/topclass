<% provide(:title, 'Configurar cuotas de asignación de cupos') %>
<h1>Configurar cuotas de asignación de cupos</h1>
<div class="row">
  <div class="span6 offset3">   

    <%= form_for @quota, url: createQuota_path(@quota) , html: {method: "post"} do |f|  %>
   <%= render 'shared/quota_error_messages' %>
    <%= p_fieldset('default',legend: 'Datos Básicos',style: 'margin-bottom:10px') do %>      
      <%= f.hidden_field :id  %>  
      <%= f.hidden_field :subject_id %>
      
      <%= f.label :own_quota , "Cuota total materia"%>
      <%= f.text_field :own_quota %>
      
      <%= f.label :program_quota , "Cuota materia" %>
      <%= f.text_field :program_quota %>
      
      <%= f.label :pregrade_quota, "Cuota pregrado" %>
      <%= f.text_field :pregrade_quota %>
     
    <% end %> 
    
    <p align="center">
      <%= f.submit "Cambiar cuota", class: "btn btn-primary" %> 
     <%= link_to "Volver", list_subject_path, class: "btn" %> 
    </p> 
      
    <% end %>
  </div>
</div>
