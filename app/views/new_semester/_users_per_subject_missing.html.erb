<%if @users_per_subject_missing != nil then %>
<h4>Estudiantes por fuera del curso</h4>
<ul class="users_per_subject_missing_ul">
	<table class="table table-hover">
		<thead>
			<th>#</th>
			<th>Identificacion</th>
			<th>Semestre de ingreso</th>
			<th>Nombre</th>
			<th>Apellido</th>
		</thead>
		<tbody>
			<%@users_per_subject_missing.each_with_index do |user_subject, index|%>
			<tr class="error">
				<td><%= index + 1 %></td>
				<td><%=user_subject.identification%></td>
				<td><%=user_subject.code[0..3]+"-"+user_subject.code[4]%></td>
				<td><%=user_subject.firstname%></td>
				<td><%=user_subject.lastname%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</ul>
<%= will_paginate @users_per_subject_missing%>
<% end %>